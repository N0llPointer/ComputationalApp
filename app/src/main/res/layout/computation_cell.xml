<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#eeeeee"
        android:layout_height="match_parent">


    <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="match_parent">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Задача №1"
                      android:textSize="32sp"
                      android:fontFamily="sans-serif-light"
                      android:textStyle="bold"
                      android:id="@+id/title"
                      android:layout_marginStart="8dp"
                      android:layout_marginTop="4dp"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_below="@id/title"
                      android:layout_marginStart="8dp"
                      android:layout_marginEnd="8dp"
                      android:text="@string/question1"
                      android:textSize="16sp"
                      android:id="@+id/description"/>

            <!--  Email Label -->
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_a_container"
                    android:layout_below="@id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="8dp">

                <EditText android:id="@+id/input_a"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:inputType="number"
                          android:textColor="@android:color/black"
                          android:hint="a = (сек)"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_below="@id/input_a_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_margin="8dp"
                    android:id="@+id/input_b_container"
                    android:layout_marginBottom="8dp">

                <EditText android:id="@+id/input_b"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:inputType="number"
                          android:textColor="@android:color/black"
                          android:hint="b = (сек)"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_l_container"
                    android:layout_below="@id/input_b_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="8dp">

                <EditText android:id="@+id/input_l"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:inputType="number"
                          android:textColor="@android:color/black"
                          android:hint="l = (м)"/>

            </android.support.design.widget.TextInputLayout>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_below="@id/input_l_container"
                      android:layout_margin="8dp"
                      android:textSize="18sp"
                      android:textColor="@android:color/black"
                      android:id="@+id/result_text_view"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>